<body class="post">
    <header>
        <script>
            var currentPageUrl = "{{ data.page.url }}";
            var backLink = currentPageUrl === '/blog/'
                ? '/'
                : (
                    currentPageUrl.startsWith('/blog/')
                    ? '/blog/'
                    : '/');
        </script>

        <a href="#" onclick="window.location.href = backLink;">&larr; back</a>
    </header>

    <main>
        <h2>{{ title }}</h2>

        {{ content | safe }}
    </main>
</body>
